{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block javascript %}
    <script type="text/javascript">
        $(document).ready(function(){
            $("#inscription").hide();
            $("#inscription").fadeIn(5000);
        });
    </script>
{% endblock %}

{% block fos_user_content %}

    <div class="container">

        <div id="inscription">
            <blockquote class="oval-thought">
                <p><a href="{{ path('fos_user_registration_register') }}">Pas encore inscrit ?</a></p>
            </blockquote>
        </div>

        <form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin" style="text-align:center">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

            <img src="{{ asset('bundles/dreamsdream/images/user_login.png') }}" width="96" class="user_login" />

            {% if error %}
                <div class="alert alert-dismissable alert-danger">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    {{ error|trans }}.
                </div>
            {% endif %}

            <div class="input-group">
                <span class="input-group-addon">
                    <img src="{{ asset('bundles/dreamsdream/images/user_login_id.png') }}" width="22" />
                </span>
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Identifiant" required="required" />
            </div>

            <div class="input-group">
                <span class="input-group-addon">
                    <img src="{{ asset('bundles/dreamsdream/images/user_login_password.png') }}" width="22" />
                </span>
                <input class="form-control" type="password" id="password" name="_password" placeholder="Mot de passe" required="required" />
            </div>

            <input type="submit" class="btn btn-large btn-primary" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />

            <div class="form-group">
                <input type="checkbox" id="remember_me" name="_remember_me" class="remember-me" checked />
                <label for="remember_me" class="remember-me-text">Rester connecté</label>

                <a href="{{ path('fos_user_resetting_request') }}" class="change-password">Mot de passe oublié ?</a>
            </div><!--
            <br />
            <!--
            <div class="form-group">
                <a href="{{ path('fos_user_registration_register') }}" class="create-account">Créer un compte</a>
            </div>-->
        </form>
        <br />
        <ul class="pager">
            <li><a href="{{ path('dreams_dream_show') }}">Retour au site</a></li>
        </ul>
    </div>

{% endblock fos_user_content %}