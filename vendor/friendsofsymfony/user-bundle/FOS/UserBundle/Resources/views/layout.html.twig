<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <link href=" {{asset('bundles/bootstrap/css/bootstrap.css')}}" rel="stylesheet">
        <link href="{{asset('bundles/bootstrap/css/bootstrap-responsive.css')}}" rel="stylesheet">

        <script src="{{asset('bundles/bootstrap/js/bootstrap.js')}}"></script>
        <style type="text/css">
            body {
                padding-top: 5%;
                background-color: #EEEFEF;
            }
        </style>
    </head>
    <body>

        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="flash-{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <div>
            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div>
    </body>
</html>
